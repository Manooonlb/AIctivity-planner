{% extends 'base.html.twig' %}

{% block body %}

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-lg-6">
        <div class="card mb-4" style="border-radius: .5rem;">
          <div class="card-body p-4 gradient-custom rounded-6">
            {{ form_start(form) }}
            
            <div class="row mb-3">
              <div class="col-sm-3">
                <p class="mb-0">Name</p>
              </div>
              <div class="col-sm-9">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <hr>
            <div class="row mb-3">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <hr>
            <div class="row mb-3">
              <div class="col-sm-3">
                <p class="mb-0">Birthdate</p>
              </div>
              <div class="col-sm-9">
                {{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <hr>
            <div class="row mb-3">
              <div class="col-sm-3">
                <p class="mb-0">Profile picture</p>
              </div>
              <div class="col-sm-9">
                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <hr>
            <div class="d-flex justify-content-center">
              <button class="btn btn-custom-profile">{{ button_label|default('Save') }}</button>
            </div>
            <hr>
            <div class="d-flex justify-content-center">
              <a href="{{ path('app_profile_my') }}">Back to profile</a>
            </div>
            
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}


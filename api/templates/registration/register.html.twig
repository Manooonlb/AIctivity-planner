{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div
		class="d-flex justify-content-center">
		<!-- Pills content -->
		<div class="tab-content">
			<div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">

				{% for flash_error in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
				{% endfor %}

				<div class="d-flex justify-content-center">
					<h1 class="h3 mb-3 font-weight-normal">Register</h1>
				</div>

				<div class="d-flex justify-content-center">
					{{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}
				</div>

				<div class="form-outline">
					{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
				</div>

				<div class="form-outline">
					{{ form_widget(registrationForm.email, {
                        'attr': {'class': 'form-control form-control-sm'},
                        }) 
                    }}
					{{ form_label(registrationForm.email, 'email', {'label_attr': {'class': 'form-label'}})}}
				</div>

				<div class="form-outline datepicker">
					{{ form_widget(registrationForm.birthday, {
                        'attr': {'class': 'form-control form-control-sm'},
                        }) 
                    }}
					{{ form_label(registrationForm.birthday, 'birthday', {'label_attr': {'class': 'form-label'}})}}
				</div>

				{# <div class="form-group mb-3">
									{{ form_row(registrationForm.birthday, {'attr': {'class': 'form-control', 'placeholder': 'Birthday'}}) }}
								</div>
				
								<div class="form-outline datepicker">
									<input type="text" class="form-control" id="exampleDatepicker11"/>
									<label for="exampleDatepicker11" class="form-label">Select a date</label>
								</div> #}

				<div class="form-group mb-3">
					{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
				</div>

				<div class="form-group justify-content-center">
					{{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}}) }}
					<label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
						I have read and agree to the terms
					</label>
				</div>

				<div class="d-flex justify-content-center">
					<button type="submit" class="btn btn-primary">Register</button>
				</div>

				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>

{% endblock %}
